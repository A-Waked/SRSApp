<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/txt_signup" />

    <EditText
        android:id="@+id/editText_nameSignup"
        android:layout_width="291dp"
        android:layout_height="39dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="135dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:ems="10"
        android:gravity="center|left"
        android:hint="John Doe"
        android:inputType="textPersonName"
        android:textColorHint="#A1A1A1"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_emailSignup"
        android:layout_width="291dp"
        android:layout_height="39dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="54dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:ems="10"
        android:gravity="center|left"
        android:hint="user@email.com"
        android:inputType="textPersonName"
        android:textColorHint="#A1A1A1"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_nameSignup" />

    <EditText
        android:id="@+id/editText_passwordSignup"
        android:layout_width="291dp"
        android:layout_height="39dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="55dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:ems="10"
        android:gravity="center|left"
        android:hint="password"
        android:inputType="textPersonName"
        android:textColorHint="#A1A1A1"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_emailSignup" />

    <ImageButton
        android:id="@+id/btn_signupFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/btn_loginExists"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/btn_signup2" />

    <ImageButton
        android:id="@+id/btn_loginExists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@android:color/transparent"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/txt_login" />
</androidx.constraintlayout.widget.ConstraintLayout>